{
  "rules": {
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ],
    "indent": [
      0,
      2
    ],
    "quotes": [
      0,
      "single"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "never"
    ]
  },
  "globals": {
    "describe": false,
    "it": false,
    "before": false,
    "after": false,
    "document" : false
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended"
}
